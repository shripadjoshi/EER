<%= form_for company, html: { multipart: true } do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>

  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <select name="country" class="countries" id="countryId">
      <option value="">Select Country</option>
    </select>
    <%#= f.text_field :country %>
    <%#= f.input :country_field, collection: CountryStateSelect.countries_collection %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%#= f.text_field :state %>
    <select name="state" class="states" id="stateId">
      <option value="">Select State</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%#= f.text_field :city %>
    <select name="city" class="cities" id="cityId">
      <option value="">Select City</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :pincode %>
    <%= f.number_field :pincode %>
  </div>

  <div class="field">
    <%= f.label :phone_no %>
    <%= f.number_field :phone_no %>
  </div>

  <div class="field">
    <%= f.label :mobile_no %>
    <%= f.number_field :mobile_no %>
  </div>

  <div class="field">
    <%= f.label :company_type %>
    <%= f.text_field :company_type %>
  </div>

  <div class="field">
    <%= f.label :industry_type %>
    <%= f.text_field :industry_type %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
