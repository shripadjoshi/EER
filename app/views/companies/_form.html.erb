<%#= form_for company, html: { multipart: true, class: "well form-horizontal" } do |f| %>
<%= simple_form_for company, html: { multipart: true, class: "well form-horizontal" } do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-md-4 control-label">Company Name</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :name, placeholder: "Company" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Company Logo</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.file_field :logo %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Website</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :website, placeholder: "Company website" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Address</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_area :address, placeholder: "Address" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Country</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.collection_select :country_id, Country.order(:name), :id, :name, { include_blank: false, prompt: "Please select country" }, {class: 'country_drop_down form-control' }%>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">State</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, { include_blank: false, prompt: "Please select state" }, {class: 'state_drop_down form-control' } %>
      </div>
    </div>
    
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">City</label> 
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :city, placeholder: "City" %>
      </div>
    </div>
    
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Pincode</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.number_field :pincode, placeholder: "Pincode" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Phone No.</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.number_field :phone_no, placeholder: "Phone no." %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Mobile No.</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.number_field :mobile_no, placeholder: "Mobile no." %>
      </div>
    </div>        
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Company type</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :company_type, placeholder: "Company type" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label">Industry type</label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :industry_type, placeholder: "Industry type" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <button class="btn btn-primary btn-lg btn-block" type="submit">
        <span>Submit <span class="glyphicon glyphicon-send"></span></span>
        </span>
      </button>
        <a href="<%= companies_path %>" class="btn btn-primary btn-lg btn-block">Back</a>
    </div>
  </div>
<% end %>
