<div class="container">
  <h1>Companies</h1>

  <table id="companies" cellspacing="0" width="100%" datatable="ng" class="row-border hover dataTable">
    <thead>
      <tr>
        <th>Logo</th>
        <th>Name</th>        
        <th>Website</th>        
        <th>Company type</th>
        <th>Industry type</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each_with_index do |company, index| %>
        <tr>
          <td>
            <a class="company_info" data-toggle="modal" data-target="#<%= company.id%>_<%= index %>">
              <%= image_tag company.logo.url(:small) %>
            </a>
          </td>
          <td><%= company.name %></td>          
          <td><%= company.website %></td>
          <td><%= company.company_type %></td>
          <td><%= company.industry_type %></td>
          <td>
              <a class="btn btn-success" data-toggle="modal" data-target="#<%= company.id%>_<%= index %>">Other Information</a>
              <%= link_to 'Edit', edit_company_path(company), class: "btn btn-primary"%>
              <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
          </td>
        </tr>
          
      <% end %>
    </tbody>
  </table>
  <% @companies.each_with_index do |company, index| %>
  <!-- Modal window -->
  <div  id="<%= company.id%>_<%= index %>" class="modal fade" role="dialog" >
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= image_tag company.logo.url(:thumb) %> <b><%= company.name.capitalize %></b> company details</h4>
        </div>
        <div class="modal-body">
          <table id="companiesModal" cellspacing="0" width="100%" class="row-border hover" border="1">
        <thead>
          <tr>
              <th colspan="2"><center>Company details</center></th>               
            </tr>
            <tr>
              <th>Name:</th>
              <td><%= company.name.capitalize %></td>          
            </tr>
            <tr>
              <th>Website:</th>
              <td><%=company.website%></td>          
            </tr>
            <tr>
              <th>Address:</th>
              <td><%=company.address%></td>          
            </tr>
            <tr>
              <th>Country:</th>
              <td><%=company.country_name%></td>          
            </tr>
            <tr>
              <th>State:</th>
              <td><%=company.state_name%></td>          
            </tr>
            <tr>
              <th>City:</th>
              <td><%=company.city%></td>         
            </tr>
            <tr>
              <th>Pincode:</th>
              <td><%=company.pincode%></td>          
            </tr>
            <tr>
              <th>Phone No.:</th>
              <td><%=company.phone_no%></td>         
            </tr>
            <tr>
              <th>Mobile No.:</th>
              <td><%=company.mobile_no%></td>          
            </tr>
            <tr>
              <th>Company Type:</th>
              <td><%=company.company_type%></td>          
            </tr>
            <tr>
              <th>Industry Type:</th>
              <td><%=company.industry_type%></td>         
            </tr>
          </thead>
        <!--<tbody>
            
        </tbody>-->
      </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
  <% end %>
  <br>

  <%= link_to 'New Company', new_company_url %>
</div>
